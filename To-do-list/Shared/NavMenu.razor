@using ToDoList.Models;
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ToDoList</a>
        <img class="tdp-picture" src="https://cdn-icons-png.flaticon.com/512/4697/4697260.png" />
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Todo
            </NavLink>

            <label class="toggle">
                <input type="checkbox" checked="@ToDoOptions.IsDarkTheme" @oninput="ToggleDarkTheme">
                <span class="labels" data-on="Thème sombre ☽" data-off="Thème clair ☼"></span>
            </label>

        </div>
    </nav>
</div>
